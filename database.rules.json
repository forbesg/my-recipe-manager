{
  "rules": {
    ".read": false,
    ".write": false,
    "recipes": {
      ".read": true,
      ".write": "auth != null && !data.exists()",
      "$recipe_id": {
        ".write": "auth != null && !data.exists() || auth != null && root.child('recipes/'+$recipe_id+'/owner/uid').val() == auth.uid",
      	"favoritedBy": {
          ".write": "auth != null"
        },
        "image": {
          ".write": "auth != null && auth != null && root.child('recipes/'+$recipe_id+'/owner/uid').val() == auth.uid"
        },
        "thumb": {
          ".write": "auth != null && auth != null && root.child('recipes/'+$recipe_id+'/owner/uid').val() == auth.uid"
        }
      }
    },
    "notification": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "users": {
      ".read": "auth != null",
      ".write": false,
      "$user_id": {
        ".write": "auth != null && !data.exists() || auth != null && $user_id == auth.uid"
      }
    }
  }
}
